@{
    ViewBag.Title = "Coil Check";
}

<table class="bodyTable">
    <tr>
        <td style="width:300px;vertical-align:top;">
            <div class="sideMenuDiv">
                @Html.Partial("_SideMenuPanel")
            </div>
        </td>
        <td valign="top">
            @Html.Partial("_PageTitlePanel")
        </td>
        <td>
            <table>
                <tr>
                    <td>
                        <label for="UploadedFile" class="btn btn-primary btn-lg" style="margin-bottom:10px;margin-top:10px;">
                            <span class="glyphicon glyphicon-folder-open"></span>  SELECT FILE
                        </label>
                        <span id="file-selected"></span>&nbsp;&nbsp;
                        <input type="file" id="UploadedFile" name="UploadedFile" style="display: none " />
                    </td>
                    <td>
                        <button type="button" id="Open" class="btn btn-primary btn-lg" onclick="updateFile()" style="float:left; width:100px;"><span class="glyphicon glyphicon-file"></span> Open</button>
                        <span style="font-size:100%; color:red;" name="message" id="message">
                            
                        </span>
                        <input type="text" name="updateFlag" id="updateFlag" />

                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

<script>
    $('#UploadedFile').bind('change', function () { var fileName = ''; fileName = document.getElementById("UploadedFile").files[0].name; $('#file-selected').html(fileName); })

    function updateFile()
    {
        $('#updateFlag').val('update');
        $("#frmMain").submit();
    }
</script>
