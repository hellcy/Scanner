@model Scanner.Models.Contact

@{
    ViewBag.Title = "Career";
    var role = "";
    if (Request.IsAuthenticated)
    {
        if (Session["User"] != null)
        {
            role = ((Scanner.Models.User)Session["User"]).Role;
        }
    }

}



<div class="row" style="margin-top:10px;">

    <div class="col-md-4" style="width:100%;text-align:center">
        <fieldset>
            <table style="border:solid; border-width:1px;margin-left:auto;margin-right:auto;width:800px;">
                <tr>
                    <td colspan="3" style="padding:10px"><font style="font-size:30px; font-weight:bold;">@ViewBag.Title</font></td>
                </tr>
                <tr style="display:@conDisp">
                    <td style="width:100px;"></td>
                    <td style="font-size:20px; padding:10px; width:200px;">
                        <div class="editor-label">
                            @Html.LabelFor(u => u.Name)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.Name)
                            <br /><font color="red">@Html.ValidationMessageFor(u => u.Name)</font>
                        </div>
                    </td>
                </tr>
                <tr style="display:@conDisp">
                    <td style="width:100px;"></td>
                    <td style="font-size:20px; padding:10px; width:200px;">
                        <div class="editor-label">
                            @Html.LabelFor(u => u.Mobile)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.Mobile)
                            <br /><font color="red">@Html.ValidationMessageFor(u => u.Mobile)</font>
                        </div>
                    </td>
                </tr>
                <tr style="display:@conDisp">
                    <td></td>
                    <td style="font-size:20px; padding:10px">
                        <div class="editor-label">
                            @Html.LabelFor(u => u.Email)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.Email)<br />
                            <font color="red">@Html.ValidationMessageFor(u => u.Email)</font>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td style="font-size:20px; padding:10px">
                        <div class="editor-label">
                            @Html.LabelFor(u => u.Subject)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.Subject, new { style = "width:490px;" })<br />
                            <font color="red">@Html.ValidationMessageFor(u => u.Subject)</font>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td style="font-size:20px; padding:10px" valign="top">
                        <div class="editor-label">
                            @Html.LabelFor(u => u.EmailBody)
                        </div>
                    </td>
                    <td style="padding-top:10px;padding-bottom:10px">
                        <div class="editor-field">
                            @Html.TextAreaFor(u => u.EmailBody, new { rows = "15", cols = "15", style = "text-align:left;" })<br />
                            <font color="red">@Html.ValidationMessageFor(u => u.EmailBody)</font>
                        </div>
                    </td>
                </tr>

                <tr style="display:none;">
                    <td></td>
                    <td style="font-size:20px; padding:10px">
                        <div class="editor-label">
                            @Html.LabelFor(u => u.Attachment)
                        </div>
                    </td>
                    <td style="padding-top:10px;" valign="top">
                        <div class="editor-field">
                            <input type="file" name="fileUploader" />
                            @Html.TextBoxFor(u => u.Attachment, new { style = "display: none;" }) <br />
                            <font color="red">@Html.ValidationMessageFor(u => u.Attachment)</font>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="padding:10px"></td>
                    <td></td>
                    <td>
                        <button value="" class="btn btn-primary btn-lg" style="height:40px; width: 100px; margin-bottom:10px;margin-top:10px;" onclick="gotoPage('Contact','Home','@cond');"><b>SUBMIT</b></button>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        @*@if (successMsg != "")
                            {
                                <div style="color:green; font-size:18px;">@successMsg</div>
                            }
                            else
                            {
                                <font color="red">@Html.ValidationSummary(true, "Submit failed. Check your input details.")</font>
                            }*@
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>


</div>
<script language="javascript">
    var msg = '@ViewBag.Message';
    if (msg != "") {
        BootstrapDialog.show({
            title: '<font style="font-size:30px;font-weight:bold;"><i class="glyphicon glyphicon-info-sign"></i> Information</font>',
            message: "<font style='font-size:25px;'>" + msg + "</font>",
            buttons: [{
                label: 'OK',
                cssClass: 'btn-dialog',
                action: function (dialogItself) {
                    dialogItself.close();
                }
            }]
        });

    }
</script>