                        @if (Model.sortCol == "LAST_STOCKTAKE_DATE")
                        {
                            <td style="width:70px;font-weight:bold;"><a onclick="orderToggle('LAST_STOCKTAKE_DATE','Date')">LAST_STOCKTAKE_DATE<span id="LAST_STOCKTAKE_DATE_ord" style="float:right;color:green;" class="@Model.orderBy"></span></a></td>
                        }
                        else
                        {
                            <td style="width:70px;font-weight:bold;"><a onclick="orderToggle('LAST_STOCKTAKE_DATE','Date')">LAST_STOCKTAKE_DATE<span id="LAST_STOCKTAKE_DATE_ord" style="float:right;color:green;display:none;"></span></a></td>
