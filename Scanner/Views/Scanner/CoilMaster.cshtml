                        }
                        else
                        {
                            <td style="width:50px;font-weight:bold;"><a onclick="orderToggle('MONTH_RECD','String')">MONTH_RECD<span id="MONTH_RECD_ord" style="float:right;color:green;display:none;"></span></a></td>
                        }
                        @if (Model.sortCol == "DATE_INWH")
                        {
                            <td style="width:70px;font-weight:bold;"><a onclick="orderToggle('DATE_INWH','Date')">DATE_INWH<span id="DATE_INWH_ord" style="float:right;color:green;" class="@Model.orderBy"></span></a></td>
                        }
                        else
                        {
                            <td style="width:70px;font-weight:bold;"><a onclick="orderToggle('DATE_INWH','Date')">DATE_INWH<span id="DATE_INWH_ord" style="float:right;color:green;display:none;"></span></a></td>
                        }
                        @if (Model.sortCol == "DATE_TRANSFER")
                        {
                            <td style="width:70px;font-weight:bold;"><a onclick="orderToggle('DATE_TRANSFER','Date')">DATE_TRANSFER<span id="DATE_TRANSFER_ord" style="float:right;color:green;" class="@Model.orderBy"></span></a></td>
                        }
                        else
                        {
                            <td style="width:70px;font-weight:bold;"><a onclick="orderToggle('DATE_TRANSFER','Date')">DATE_TRANSFER<span id="DATE_TRANSFER_ord" style="float:right;color:green;display:none;"></span></a></td>
