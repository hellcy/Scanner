                            <td style="width:30px;font-weight:bold;"><a onclick="orderToggle('[ORDER]','Number')">ORDER<span id="ORDER_ord" style="float:right;color:green;" class="@Model.orderBy"></span></a></td>
                        }
                        else
                        {
                            <td style="width:30px;font-weight:bold;"><a onclick="orderToggle('[ORDER]','Number')">ORDER<span id="ORDER_ord" style="float:right;color:green;display:none;"></span></a></td>
                        }
                        @if (Model.sortCol == "P_ORDER")
                        {
                            <td style="width:50px;font-weight:bold;"><a onclick="orderToggle('P_ORDER','String')">P_ORDER<span id="P_ORDER_ord" style="float:right;color:green;" class="@Model.orderBy"></span></a></td>
                        }
                        else
